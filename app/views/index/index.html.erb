<div class="row">
  <div class="col-xs-12">

    <div class="jumbotron">
      <h1>Welcome to favLang!</h1>
      <p>Please type the user you wish to find more about below:</p>
      <%= form_tag("/github_users/search", method: "get") do %>
        <%= label_tag(:name, "Search for:") %>
        <%= text_field_tag(:name) %>
        <%= submit_tag("Search") %>
      <% end %>
    </div><!-- /.jumbotron -->

  </div><!-- /.col-xs-12 -->
</div><!-- /.row -->

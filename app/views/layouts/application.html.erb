<!DOCTYPE html>
<html>
<head>
  <title>FavouriteLanguage</title>
  <%= stylesheet_link_tag    'application.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application.js', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <script src="http://code.highcharts.com/highcharts.js"></script>
</head>
<body>

  <div class="container-fluid">
    <%= yield %>
    <% unless flash[:error].blank? %>
      <div class="alert alert-danger col-xs-4 col-xs-offset-4 text-center">
        <%= flash[:error] %>
      </div>
    <% end %>
  </div>

</body>
</html>
